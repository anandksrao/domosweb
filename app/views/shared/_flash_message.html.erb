<% if flash[:alert] %>
  <div class="alert alert-error" style="margin-top:10px">
		<a class="close" data-dismiss="alert">×</a>
		<%= flash[:alert].html_safe %></div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success" style="margin-top:10px">
	  <a class="close" data-dismiss="alert">×</a>
		<%= flash[:notice].html_safe %>
	</div>
<% end %>
