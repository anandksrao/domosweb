<div id='notification_field'></div>
<fieldset>
  <%= form_for @user, :remote => true, :html => {:onsubmit => "Element.toggle('ind')", :class=> 'well form-horizontal', :method => :post}  do |f| %>

  <div class='control-group'>
    <label class='control-label'>Name*</label>
    <div class='controls'>
      <%= f.text_field :name, :id => 'name', :class => 'input-xlarge', :required => true %>
    </div>
  </div>

  <div class='control-group'>
    <label class='control-label'>Institution</label>
    <div class='controls'>
    <%= f.text_field :institute, :id => 'institute', :class => 'input-xlarge' %>
    </div>
  </div>

  <div class='control-group'>
    <label class='control-label'>Website</label>
    <div class='controls'>
    <%= f.text_field :website, :value => 'http://', :id => 'website', :class => 'input-xlarge' %>
    </div>
  </div>

  <div class='control-group'>
    <label class='control-label'>Email*</label>
    <div class='controls'>
      <%= f.text_field :email, :class => 'input-xlarge', :required => true, :type => 'email' %>
    </div>
  </div>

   <div class='controls'>
    <%= f.submit "Sign me up", :class => 'btn btn-primary' -%> <span id="ind" style='display:none;'><img src="images/ind.gif" alt="indicator"/></span>
  </div>

<% end %>
</fieldset>
